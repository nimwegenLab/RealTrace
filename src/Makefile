# CFLAGS = -std=c++17 -ffast-math -O3
CFLAGS = -std=c++17 -O3

FADFLAG =  Faddeeva.cc

NLOPTLAGS = -I ~/nlopt/include -L ~/nlopt/lib -lnlopt -lm  
NLOPTLAGS64 = -I ~/nlopt/include -L ~/nlopt/lib64 -lnlopt -lm  

# BOOSTFLAG = -I /Applications/boost/boost_1_73_0 -L /opt/local/lib  -lboost_iostreams -lz

EIGENFLAG = -I ~/eigen  


cluster:
	g++ main.cpp $(CFLAGS) $(NLOPTLAGS64) $(FADFLAG) -static-libstdc++ -lstdc++fs -o ../bin/RealTrace

local: 
	g++ main.cpp -Wall -stdlib=libc++  $(CFLAGS) $(NLOPTLAGS) $(EIGENFLAG) $(FADFLAG)  -o ../bin/RealTrace

